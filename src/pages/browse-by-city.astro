---
import CardPackage from "../components/CardPackage.astro";
import { weddingPackages } from "../components/section-pages/homepage/BestPackages.astro";
import Hero from "../components/section-pages/homepage/Hero.astro";
import Testimonial from "../components/section-pages/homepage/Testimonial.astro";
import BaseLayout from "../layouts/BaseLayout.astro";
import PageHeaderLeftRight from "../components/PageHeaderLeftRight.astro";
---

<BaseLayout title="Browse by City">
  <div class="flex flex-col gap-8 md:gap-14 lg:gap-[70px]">
    <div class="flex flex-col gap-17_5">
      <!-- Header Section -->
       <div class="px-4 md:px-16 lg:px-8 xl:px-0 max-w-1130 mx-auto w-full">
         <PageHeaderLeftRight
           title={"Wedding Packages\nin Jakarta City"}
           ratingCount={"18,493"}
           stars={5}
         />
       </div>
      <Hero />
    </div>

    <!-- Best Wedding Packages -->
    <section class="w-full px-4 md:px-16 lg:px-8 xl:px-0 bg-white">
      <div class="max-w-[1100px] mx-auto">
        <!-- Title -->
        <div class="text-center mb-8 md:mb-10 lg:mb-12">
          <h2
            class="text-2xl md:text-3xl lg:text-[30px] font-bold text-black leading-normal px-4"
          >
            Browse Our Best Selection <br />
            Wedding Packages
          </h2>
        </div>

        <!-- Cards Container -->
        <div class="overflow-x-auto md:overflow-x-visible no-scrollbar">
          <!-- Mobile: Horizontal Scroll -->
          <div class="flex gap-4 md:hidden pb-4">
            {
              weddingPackages.map((pkg) => (
                <a href="/package-details" class="flex-shrink-0 w-[280px]">
                  <CardPackage
                    isPopular={pkg.isPopular}
                    title={pkg.title}
                    price={pkg.price}
                    location={pkg.location}
                    vendor={pkg.vendor}
                    image={pkg.image}
                  />
                </a>
              ))
            }
          </div>

          <!-- Tablet & Desktop: Grid -->
          <div
            class="hidden md:grid md:grid-cols-3 lg:grid-cols-3 xl:grid-cols-4 gap-[30px]"
          >
            {
              weddingPackages.map((pkg) => (
                <a href="/package-details">
                  <CardPackage
                    isPopular={pkg.isPopular}
                    title={pkg.title}
                    price={pkg.price}
                    location={pkg.location}
                    vendor={pkg.vendor}
                    image={pkg.image}
                  />
                </a>
              ))
            }
          </div>
        </div>
      </div>
    </section>

    <Testimonial />
  </div>
</BaseLayout>
