---
import Input from "../../components/Input.astro";
import DatePicker from "../../components/DatePicker.astro";
import DividerLine from "../../components/DividerLine.astro";
import Accordion from "../../components/Accordion.astro";
import PaymentMethodSelector from "../../components/PaymentMethodSelector.astro";
import TestimonialCard from "../../components/TestimonialCard.astro";
import BaseLayout from "../../layouts/BaseLayout.astro";
---

<BaseLayout title="Checkout Package" backgroundColor="bg-gray">
  <div
    class="flex flex-col gap-20 max-w-1130 mx-auto px-4 md:px-6 lg:px-8 xl:px-0 w-full"
  >
    <h2 class="text-30 font-bold">Checkout Package</h2>

    <div class="flex flex-col gap-30 md:grid grid-cols-[1fr_350px] items-start">
      <div class="flex flex-col gap-20 w-full">
        <Accordion title="Customer Information" defaultOpen={true}>
          <DividerLine />
          <div class="flex flex-col gap-30 items-start justify-start w-full">
            <div class="flex flex-col gap-30 lg:grid grid-cols-2 w-full p-1">
              <div class="w-full md:flex-1">
                <Input
                  label="Full Name"
                  icon="/public/icons/profile.svg"
                  placeholder="Write your complete name"
                  name="fullName"
                  id="fullName"
                  required={true}
                  fullWidth={true}
                />
              </div>
              <div class="w-full md:flex-1">
                <Input
                  label="Email Address"
                  icon="/public/icons/sms.svg"
                  placeholder="Write your email address"
                  name="email"
                  id="email"
                  type="email"
                  required={true}
                  fullWidth={true}
                />
              </div>

              <div class="w-full md:flex-1">
                <Input
                  label="Phone Number"
                  icon="/public/icons/call.svg"
                  placeholder="Let us know your number"
                  name="phone"
                  id="phone"
                  type="tel"
                  required={true}
                  fullWidth={true}
                />
              </div>
              <div class="w-full md:flex-1">
                <Input
                  isDatePicker
                  type="text"
                  label="Started At"
                  icon="/public/icons/calendar.svg"
                  placeholder="Choose your date"
                  name="startedAt"
                  id="startedAt"
                  required={true}
                  fullWidth={true}
                />
              </div>
            </div>

            <!-- Divider -->
            <DividerLine />

            <!-- Privacy Notice -->
            <div class="flex gap-2.5 items-center justify-start w-full">
              <div class="relative shrink-0 size-8">
                <img
                  src="/public/icons/security-user.svg"
                  alt="security"
                  class="block max-w-none size-full"
                />
              </div>
              <div class="font-semibold leading-normal text-16 text-black">
                <p>Samawa is protecting your privacy better</p>
              </div>
            </div>
          </div>
        </Accordion>

        <!-- Example: Second Accordion (Open by default) -->
        <Accordion title="Payment Details" defaultOpen={true}>
          <div class="flex flex-col gap-30 items-start justify-start w-full">
            <DividerLine />
            <!-- Payment Summary -->
            <div class="flex flex-col gap-5 items-start justify-start w-full">
              <!-- Package Quantity -->
              <div
                class="flex gap-1 md:gap-5 lg:gap-7.5 md:items-center md:flex-row justify-start w-full flex-col"
              >
                <div
                  class="flex gap-2.5 items-center justify-start min-w-0 flex-1"
                >
                  <div class="relative shrink-0 size-6">
                    <img
                      src="/public/icons/receipt-text.svg"
                      alt="receipt"
                      class="block max-w-none size-full"
                    />
                  </div>
                  <div class="font-normal leading-normal text-16 text-black">
                    <p>Package Quantity</p>
                  </div>
                </div>
                <div class="font-semibold leading-normal text-16 text-black">
                  <p>1 Wedding Package</p>
                </div>
              </div>

              <!-- Package Price -->
              <div
                class="flex gap-1 md:gap-5 lg:gap-7.5 md:items-center md:flex-row justify-start w-full flex-col"
              >
                <div
                  class="flex gap-2.5 items-center justify-start min-w-0 flex-1"
                >
                  <div class="relative shrink-0 size-6">
                    <img
                      src="/public/icons/dollar-square.svg"
                      alt="dollar"
                      class="block max-w-none size-full"
                    />
                  </div>
                  <div class="font-normal leading-normal text-16 text-black">
                    <p>Package Price (1x)</p>
                  </div>
                </div>
                <div class="font-semibold leading-normal text-16 text-black">
                  <p>Rp 560.300.493</p>
                </div>
              </div>

              <!-- Country Tax -->
              <div
                class="flex gap-1 md:gap-5 lg:gap-7.5 md:items-center md:flex-row justify-start w-full flex-col"
              >
                <div
                  class="flex gap-2.5 items-center justify-start min-w-0 flex-1"
                >
                  <div class="relative shrink-0 size-6">
                    <img
                      src="/public/icons/percentage-square.svg"
                      alt="percentage"
                      class="block max-w-none size-full"
                    />
                  </div>
                  <div class="font-normal leading-normal text-16 text-black">
                    <p>Country Tax 11%</p>
                  </div>
                </div>
                <div class="font-semibold leading-normal text-16 text-black">
                  <p>Rp 56.399.403</p>
                </div>
              </div>

              <!-- Consultation & Insurance -->
              <div
                class="flex gap-1 md:gap-5 lg:gap-7.5 md:items-center md:flex-row justify-start w-full flex-col"
              >
                <div
                  class="flex gap-2.5 items-center justify-start min-w-0 flex-1"
                >
                  <div class="relative shrink-0 size-6">
                    <img
                      src="/public/icons/message-text.svg"
                      alt="message"
                      class="block max-w-none size-full"
                    />
                  </div>
                  <div class="font-normal leading-normal text-16 text-black">
                    <p>Consultation & Insurance</p>
                  </div>
                </div>
                <div class="font-semibold leading-normal text-16 text-black">
                  <p>Rp 0 (Free)</p>
                </div>
              </div>

              <!-- Grand Total -->
              <div
                class="flex gap-1 md:gap-5 lg:gap-7.5 md:items-center md:flex-row justify-start w-full flex-col"
              >
                <div
                  class="flex gap-2.5 items-center justify-start min-w-0 flex-1"
                >
                  <div class="relative shrink-0 size-6">
                    <img
                      src="/public/icons/security-card.svg"
                      alt="security"
                      class="block max-w-none size-full"
                    />
                  </div>
                  <div class="font-normal leading-normal text-16 text-black">
                    <p>Grand Total Amount</p>
                  </div>
                </div>
                <div
                  class="font-bold leading-normal text-[18px] md:text-[20px] lg:text-[22px] text-[#ff48b6]"
                >
                  <p>Rp 616.699.896</p>
                </div>
              </div>
            </div>
          </div>
        </Accordion>

        <Accordion title="Proceed Payment to" defaultOpen={true}>
          <DividerLine />
          <PaymentMethodSelector />
        </Accordion>
      </div>

      <div
        class="bg-white relative flex flex-col gap-20 items-start justify-start p-30 rounded-3xl lg:rounded-[30px]"
      >
        <!-- Package Title -->
        <div
          class="font-bold leading-[0] min-w-full not-italic relative shrink-0 text-lg md:text-xl text-black"
        >
          <p class="leading-[normal]">
            Nikah Muda Abadi Pantai Bali Indah Sejahtera
          </p>
        </div>

        <img
          src="/public/images/wedding-1.png"
          alt="Wedding Package"
          class="w-full object-cover h-[170px] rounded-2xl md:rounded-3xl"
        />

        <!-- Package Price -->
        <div
          class="font-bold leading-[0] min-w-full not-italic relative shrink-0 text-[#ff48b6] text-xl"
        >
          <p class="leading-[normal]">Rp 198.493.000</p>
        </div>

        <!-- Divider Line -->
        <div class="h-0 relative shrink-0 w-full">
          <div class="absolute bottom-0 left-0 right-0 top-[-1px]">
            <div class="w-full h-px bg-[#e4e6eb]"></div>
          </div>
        </div>

        <!-- Happy Story Section -->
        <div
          class="font-bold leading-[0] min-w-full not-italic relative shrink-0 text-16 text-black"
        >
          <p class="leading-[normal]">Happy Story</p>
        </div>

        <TestimonialCard
          rating={5}
          testimonial="Keren banget Samawa, gue bisa nikah dengan pengalaman bagus dengan harga terjangkau! God."
          name="Andriana Putri"
          occupation="Programmer"
          image="/public/images/wedding-2.png"
          customClass="!p-3 md:!p-4 lg:!p-5"
        />

        <!-- Divider Line -->
        <DividerLine />

        <!-- Wedding Organizer Section -->
        <div
          class="content-stretch flex flex-col gap-3 items-start justify-start relative shrink-0 w-full"
        >
          <div
            class="font-bold leading-[0] not-italic relative shrink-0 text-16 text-black w-full"
          >
            <p class="leading-[normal]">Wedding Organizer</p>
          </div>
          <div
            class="box-border content-stretch flex flex-col gap-2.5 items-start justify-start p-[12px] relative rounded-[16px] shrink-0 w-full border border-[#e4e6eb]"
          >
            <div
              class="content-stretch flex gap-3 items-center justify-start relative shrink-0 w-full"
            >
              <div
                class="grid-cols-[max-content] grid-rows-[max-content] inline-grid leading-[0] place-items-start relative shrink-0"
              >
                <div
                  class="[grid-area:1_/_1] bg-center bg-cover bg-no-repeat ml-0 mt-0 rounded-[50px] size-[50px] overflow-hidden"
                >
                  <img
                    src="/public/images/wedding-3.png"
                    alt="Wedding Organizer"
                    class="w-full h-full object-cover"
                  />
                </div>
              </div>
              <div
                class="content-stretch flex flex-col gap-0.5 items-start justify-start leading-[0] not-italic relative shrink-0 text-black"
              >
                <div class="font-bold relative shrink-0 text-16 w-full">
                  <p class="leading-[normal]">Dua Putri</p>
                </div>
                <div class="font-normal relative shrink-0 text-[14px] w-full">
                  <p class="leading-[normal]">194 Packages</p>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</BaseLayout>
