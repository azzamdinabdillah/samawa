---
import Input from "../../components/Input.astro";
import DividerLine from "../../components/DividerLine.astro";
import BaseLayout from "../../layouts/BaseLayout.astro";
---

<BaseLayout title="Checkout Package" backgroundColor="bg-gray">
  <div
    class="flex flex-col gap-20 max-w-1130 mx-auto px-4 md:px-6 lg:px-8 xl:px-0 w-full"
  >
    <h2 class="text-30 font-bold">Checkout Package</h2>

    <div class="bg-white rounded-2xl md:rounded-[20px] p-4 md:p-6 lg:p-7.5">
      <div class="accordion flex flex-col gap-20">
        <div
          class="accordion-button flex justify-between items-center cursor-pointer"
        >
          <h3 class="text-20 font-bold">Customer Information</h3>
          <img
            src="/public/icons/arrow-circle-down.svg"
            alt="toggle"
            class="accordion-icon transition-transform duration-300"
          />
        </div>

        <DividerLine />

        <div
          class="accordion-body overflow-hidden transition-all duration-300 max-h-0"
        >
          <div
            class="flex flex-col gap-[30px] items-start justify-start w-full"
          >
            <!-- First Row: Full Name and Email -->
            <div
              class="flex flex-col md:flex-row gap-5 items-start md:items-center justify-start w-full"
            >
              <div class="w-full md:flex-1">
                <Input
                  label="Full Name"
                  icon="/public/icons/profile.svg"
                  placeholder="Write your complete name"
                  name="fullName"
                  id="fullName"
                  required={true}
                  fullWidth={true}
                />
              </div>
              <div class="w-full md:flex-1">
                <Input
                  label="Email Address"
                  icon="/public/icons/sms.svg"
                  placeholder="Write your email address"
                  name="email"
                  id="email"
                  type="email"
                  value="anggarisky|"
                  required={true}
                  fullWidth={true}
                  customClass="border-2 border-[#ff48b6]"
                />
              </div>
            </div>

            <!-- Second Row: Phone Number and Started At -->
            <div
              class="flex flex-col md:flex-row gap-5 items-start md:items-center justify-start w-full"
            >
              <div class="w-full md:flex-1">
                <Input
                  label="Phone Number"
                  icon="/public/icons/call.svg"
                  placeholder="Let us know your number"
                  name="phone"
                  id="phone"
                  type="tel"
                  required={true}
                  fullWidth={true}
                />
              </div>
              <div class="w-full md:flex-1">
                <Input
                  label="Started At"
                  icon="/public/icons/calendar.svg"
                  placeholder="Choose your date"
                  name="startedAt"
                  id="startedAt"
                  type="date"
                  required={true}
                  fullWidth={true}
                />
              </div>
            </div>

            <!-- Divider -->
            <DividerLine />

            <!-- Privacy Notice -->
            <div class="flex gap-2.5 items-center justify-start w-full">
              <div class="relative shrink-0 size-8">
                <img
                  src="/public/icons/security-user.svg"
                  alt="security"
                  class="block max-w-none size-full"
                />
              </div>
              <div class="font-semibold leading-normal text-16 text-black">
                <p>Angga X is protecting your privacy better</p>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

  <script>
    function toggleAccordion(button: HTMLElement) {
      const accordion = button.closest(".accordion") as HTMLElement;
      const body = accordion?.querySelector(".accordion-body") as HTMLElement;
      const icon = accordion?.querySelector(".accordion-icon") as HTMLElement;

      if (!accordion || !body || !icon) return;

      // Toggle accordion state
      if (body.classList.contains("max-h-0")) {
        // Open accordion
        body.classList.remove("max-h-0");
        body.classList.add("max-h-[1000px]");
        icon.style.transform = "rotate(180deg)";
      } else {
        // Close accordion
        body.classList.remove("max-h-[1000px]");
        body.classList.add("max-h-0");
        icon.style.transform = "rotate(0deg)";
      }
    }

    // Initialize accordion state and add event listeners
    document.addEventListener("DOMContentLoaded", function () {
      const accordionBody = document.querySelector(
        ".accordion-body"
      ) as HTMLElement;
      if (accordionBody) {
        accordionBody.classList.add("max-h-0");
      }

      // Add click event listeners to accordion buttons
      const accordionButtons = document.querySelectorAll(".accordion-button");
      accordionButtons.forEach((button) => {
        button.addEventListener("click", function () {
          toggleAccordion(this as HTMLElement);
        });
      });
    });
  </script>
</BaseLayout>
