---
import Button from "./Button.astro";

interface Props {
  title: string;
  originalPrice: string;
  discountedPrice: string;
  image: string;
  buttonText?: string;
}

const {
  title,
  originalPrice,
  discountedPrice,
  image,
  buttonText = "View Details",
} = Astro.props;
---

<div
  class="bg-white border border-[#e4e6eb] rounded-[20px] md:rounded-[25px] lg:rounded-[30px] p-4 md:p-5 lg:p-[20px] w-full"
>
  <div
    class="flex flex-col md:flex-row gap-4 md:gap-5 justify-between md:items-center"
  >
    <div class="flex flex-row gap-4 md:gap-5 items-center">
      <!-- Image -->
      <div
        class="w-[130px] md:w-[150px] lg:w-[170px] h-[100px] md:h-[110px] lg:h-[130px] rounded-[15px] md:rounded-[18px] lg:rounded-[20px] overflow-hidden flex-shrink-0"
      >
        <img src={image} alt={title} class="w-full h-full object-cover" />
      </div>

      <!-- Content -->
      <div
        class="flex flex-col gap-2 md:gap-2.5 items-start"
      >
        <h3 class="font-bold text-20 text-black leading-normal">
          {title}
        </h3>
        <div
          class="flex flex-col md:flex-row gap-2 md:gap-2.5 items-center justify-start"
        >
          <div
            class="font-semibold text-14 md:text-15 lg:text-16 text-pink leading-normal"
          >
            <span>{discountedPrice}</span>
            <span class="font-normal text-pink">/package</span>
          </div>
          <div
            class="font-normal text-14 md:text-15 lg:text-16 text-black line-through leading-normal"
          >
            {originalPrice}
          </div>
        </div>
      </div>
    </div>

    <!-- Button -->
    <div class="w-full md:w-auto flex-shrink-0">
      <Button
        text={buttonText}
        variant="outline-black"
        size="small"
        customClass="w-full md:w-auto"
      />
    </div>
  </div>
</div>
