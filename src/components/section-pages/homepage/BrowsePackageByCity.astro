---
import SectionHeaderLeftRight from '../../SectionHeaderLeftRight.astro';
import CardCityCategory from '../../CardCityCategory.astro';

// Data kota berdasarkan design Figma
const cities = [
  {
    id: 1,
    name: 'London',
    packageCount: '183,498 Packages',
    image: '/images/city-1.png'
  },
  {
    id: 2,
    name: 'Jakarta', 
    packageCount: '183,498 Packages',
    image: '/images/city-2.png'
  },
  {
    id: 3,
    name: 'Bogor',
    packageCount: '183,498 Packages', 
    image: '/images/city-3.png'
  },
  {
    id: 4,
    name: 'Luxembourg',
    packageCount: '183,498 Packages',
    image: '/images/city-4.png'
  },
  {
    id: 5,
    name: 'Palembang',
    packageCount: '183,498 Packages',
    image: '/images/city-5.png'
  },
  {
    id: 6,
    name: 'New York',
    packageCount: '183,498 Packages',
    image: '/images/city-6.png'
  }
];
---

<section id="browse-package-by-city" class="w-full bg-gray py-70">
    <div class="max-w-[1000px] mx-auto px-4 md:px-16 lg:px-8 xl:px-0">
        <!-- Header dengan title dan button -->
        <SectionHeaderLeftRight 
          title="Browse Packages\nCity Recomendation"
          buttonText="Explore All"
          buttonVariant="outline-black"
          buttonCustomClass='!bg-transparent'
          customTitleClass="text-[24px] md:text-[28px] lg:text-[30px]"
        />
      
        <!-- Grid kota dalam dua baris -->
        <div class="flex flex-col gap-4 md:gap-6 lg:gap-[30px]">
          <!-- Baris pertama -->
          <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4 md:gap-6 lg:gap-[30px]">
            {cities.map(city => (
              <a href="/browse-by-city">
                <CardCityCategory
                  cityName={city.name}
                  packageCount={city.packageCount}
                  image={city.image}
                />
              </a>
            ))}
          </div>
        </div>
    </div>
</section>
