---
import SectionHeaderLeftRight from '../../SectionHeaderLeftRight.astro';
import TestimonialCard from '../../TestimonialCard.astro';

// Sample testimonial data - replace with actual data
export const testimonials = [
  {
    rating: 5,
    testimonial: "Samawa is amazing! I was able to get married with a wonderful experience at an affordable price. Thank you!",
    name: "Andriana Putri",
    occupation: "Programmer",
    image: "/images/user-1.png"
  },
  {
    rating: 5,
    testimonial: "We are so grateful for Samawa. The process was smooth and the team was very professional. Highly recommended!",
    name: "Michael Santoso",
    occupation: "Designer",
    image: "/images/user-2.png"
  },
  {
    rating: 5,
    testimonial: "Our wedding was perfect thanks to Samawa. Everything was well-organized and beautiful. Thank you so much!",
    name: "Jessica Rahma",
    occupation: "Entrepreneur",
    image: "/images/user-3.png"
  },
  {
    rating: 5,
    testimonial: "Samawa made our dream wedding come true. The service was excellent and the price was reasonable.",
    name: "Rizky Pratama",
    occupation: "Photographer",
    image: "/images/user-1.png"
  },
  {
    rating: 5,
    testimonial: "We had a wonderful experience with Samawa. The team was attentive and very helpful throughout.",
    name: "Siti Nurhaliza",
    occupation: "Teacher",
    image: "/images/user-2.png"
  },
  {
    rating: 5,
    testimonial: "Choosing Samawa was the best decision for our wedding. Everything exceeded our expectations.",
