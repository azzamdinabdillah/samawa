---
import CardReason from "../../CardReason.astro";

// Data untuk cards
const reasonsData = [
  {
    icon: "/icons/like-shapes.svg",
    iconAlt: "Like shapes icon",
    title: "Dipercaya Sejak 1970",
    description: "Lorem ipsum dolor si amet nikah berkah dunia akhirat nantinya",
    learnMoreHref: "#dipercaya"
  },
  {
    icon: "/icons/card-tick.svg",
    iconAlt: "Card tick icon",
    title: "Boleh Refund 100%",
    description: "Lorem ipsum dolor si amet nikah berkah dunia akhirat nantinya",
    learnMoreHref: "#refund"
  },
  {
    icon: "/icons/building-3-gray.svg",
    iconAlt: "Building organizers icon",
    title: "Top Organizers",
    description: "Lorem ipsum dolor si amet nikah berkah dunia akhirat nantinya",
    learnMoreHref: "#organizers"
  }
];
---

<section id="reason" class="w-full px-4 md:px-16 lg:px-8 xl:px-0 bg-white">
  <div class="max-w-[1100px] mx-auto">
    <!-- Title -->
    <div class="text-center mb-8 md:mb-10 lg:mb-12">
      <h2 class="text-2xl md:text-3xl lg:text-[30px] font-bold text-black leading-normal px-4">
        Alasan Mereka Memilih<br />
        Wedding Package Samawa
      </h2>
    </div>

    <!-- Cards Container -->
    <div class="grid grid-cols-1 md:grid-cols-3 lg:grid-cols-3 gap-6 md:gap-8 lg:gap-10 place-items-center">
      {reasonsData.map((reason) => (
        <CardReason
          icon={reason.icon}
          iconAlt={reason.iconAlt}
          title={reason.title}
          description={reason.description}
          learnMoreHref={reason.learnMoreHref}
        />
      ))}
    </div>
  </div>
</section>
