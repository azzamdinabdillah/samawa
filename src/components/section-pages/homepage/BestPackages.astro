---

<section class="px-4 md:px-16 lg:px-8 xl:px-0 max-w-[1130px] md:mx-auto overflow-hidden">
  <!-- Header Section -->
  <SectionHeaderLeftRight 
    title="Our Latest & Best\nWedding Packages"
    buttonText="Explore All"
    buttonVariant="outline-black"
    buttonCustomClass="rounded-[50px] lg:py-[14px]"
  />

  <!-- Cards Container -->
  <div class="overflow-x-auto md:overflow-x-visible no-scrollbar">
    <!-- Mobile: Horizontal Scroll -->
    <div class="flex gap-4 md:hidden pb-4">
      {weddingPackages.slice(0, 4).map((pkg) => (
        <div class="flex-shrink-0 w-[280px]">
          <a href="/package-details">
          <CardPackage
            isPopular={pkg.isPopular}
            title={pkg.title}
            price={pkg.price}
            location={pkg.location}
            vendor={pkg.vendor}
            image={pkg.image}
          />
