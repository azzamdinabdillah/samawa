---
export interface Props {
  icon: string;
  iconAlt: string;
  title: string;
  description: string;
  learnMoreHref?: string;
}

const { 
  icon, 
  iconAlt, 
  title, 
  description, 
  learnMoreHref = "#" 
} = Astro.props as Props;
---

<div class="w-full mx-auto p-6 lg:p-[30px] border border-[#e4e6eb] rounded-[20px] lg:rounded-[30px] flex flex-col gap-4 lg:gap-5 bg-white hover:shadow-2xl hover:shadow-pink-100/50 hover:-translate-y-3 hover:border-[#ff48b6]/40 hover:bg-gradient-to-br hover:from-white hover:to-pink-50/30 transition-all duration-500 ease-out cursor-pointer group relative overflow-hidden">
  <!-- Shimmer effect -->
  <div class="absolute inset-0 bg-gradient-to-r from-transparent via-white/20 to-transparent -translate-x-full group-hover:translate-x-full transition-transform duration-1000 ease-out"></div>
  <!-- Icon -->
  <div class="w-[40px] h-[40px] lg:w-[50px] lg:h-[50px] flex-shrink-0 group-hover:scale-110 transition-transform duration-300 relative z-10">
    <img src={icon} alt={iconAlt} class="w-full h-full group-hover:brightness-110" />
  </div>
  
  <!-- Content -->
  <div class="flex flex-col gap-2 relative z-10">
    <h3 class="text-lg lg:text-[20px] font-bold text-black leading-normal group-hover:text-[#ff48b6] transition-colors duration-300">
      {title}
    </h3>
    <p class="text-sm lg:text-[16px] font-normal text-black leading-6 lg:leading-[28px] group-hover:text-gray-700 transition-colors duration-300">
      {description}
    </p>
  </div>
  
  <!-- Learn More Link -->
  <a 
    href={learnMoreHref} 
    class="text-sm lg:text-[16px] font-semibold text-[#ff48b6] leading-normal w-fit hover:text-[#e040a0] group-hover:translate-x-1 transition-all duration-300 relative group/link flex items-center gap-1 z-10"
  >
    <span class="relative">
      Learn More
      <span class="absolute -bottom-1 left-0 w-0 h-0.5 bg-[#ff48b6] group-hover/link:w-full transition-all duration-300"></span>
    </span>
    <span class="inline-block group-hover/link:translate-x-1 transition-transform duration-300">â†’</span>
  </a>
</div>
