---
interface Props {
  cityName: string;
  packageCount: string;
  image: string;
  customClass?: string;
}

const {
  cityName,
  packageCount,
  image,
  customClass = ''
} = Astro.props;

// Classes untuk card dengan responsive sizing
const cardClass = `
  bg-white rounded-[20px] md:rounded-[25px] lg:rounded-[30px] 
  p-3 md:p-4 lg:p-5 
  flex items-center gap-3 md:gap-4 lg:gap-5 
  transition-all duration-300 ease-out hover:shadow-[0_0_0_2px_#ff48b6] cursor-pointer
  ${customClass}
`.trim();

// Class untuk container gambar dengan responsive sizing
const imageContainerClass = `
  w-[60px] h-[60px] md:w-[70px] md:h-[70px] lg:w-[80px] lg:h-[80px]
  rounded-[20px] overflow-hidden flex-shrink-0
  bg-gradient-to-br from-gray-100 to-gray-200
`.trim();
---

<div class={cardClass}>
  <!-- Image dengan mask circular -->
  <div class={imageContainerClass}>
    <img 
      src={image} 
      alt={cityName}
      class="w-full h-full object-cover"
    />
  </div>

  <!-- City info -->
  <div class="flex flex-col gap-0.5 flex-grow min-w-0">
    <h3 class="text-[16px] md:text-[18px] lg:text-[20px] font-bold text-black leading-normal truncate">
      {cityName}
    </h3>
    <p class="text-[14px] md:text-[15px] lg:text-[16px] font-normal text-black/70 leading-normal">
      {packageCount}
    </p>
  </div>
</div>
