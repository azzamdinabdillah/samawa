---
interface Props {
  cityName: string;
  packageCount: string;
  image: string;
  customClass?: string;
}

const {
  cityName,
  packageCount,
  image,
  customClass = ''
} = Astro.props;

// Classes untuk card dengan kondisi active/selected
const cardClass = `
  bg-white rounded-[30px] p-5 flex items-center gap-5 
  transition-all duration-300 ease-out hover:shadow-[0_0_0_2px_#ff48b6] cursor-pointer
  ${customClass}
`.trim();

// Class untuk container gambar dengan mask circular
const imageContainerClass = `
  w-[80px] h-[80px] rounded-full overflow-hidden flex-shrink-0
  bg-gradient-to-br from-gray-100 to-gray-200
`.trim();
---

<div class={cardClass}>
  <!-- Image dengan mask circular -->
  <div class={imageContainerClass}>
    <img 
      src={image} 
      alt={cityName}
      class="w-full h-full object-cover"
    />
  </div>

  <!-- City info -->
  <div class="flex flex-col gap-0.5 flex-grow min-w-0">
    <h3 class="text-[20px] font-bold text-black leading-normal truncate">
      {cityName}
    </h3>
    <p class="text-[16px] font-normal text-black/70 leading-normal">
      {packageCount}
    </p>
  </div>
</div>
