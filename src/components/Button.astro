---
// Nilai default untuk props
const {
  text,
  variant = 'outline-black',
  customClass = '',
  fullWidth = false,
  type = 'button',
  onClick,
  disabled = false,
} = Astro.props;

// Menentukan class berdasarkan variant
let variantClass = '';
if (variant === 'pink') {
  variantClass = 'bg-pink text-white hover:bg-[#ff69b4] transition-all duration-200';
} else if (variant === 'outline-black') {
  variantClass = 'bg-white text-black border border-black hover:!bg-black hover:text-white transition-all duration-200';
}

// Menentukan class untuk width
const widthClass = fullWidth ? 'w-full' : '';

// Menggabungkan semua class
const buttonClass = `
  cursor-pointer
  rounded-full 
  py-2.5 px-4 text-16 
  md:py-3 px-5
  lg:py-3.5 lg:px-5 
  ${variantClass} font-semibold 
  ${widthClass} 
  ${customClass}
`.replace(/\s+/g, ' ').trim();
---

<button
  class={buttonClass}
  type={type}
  disabled={disabled}
  onclick={onClick ? `(${onClick.toString()})()` : undefined}
>
  {text}
  <slot />
</button>